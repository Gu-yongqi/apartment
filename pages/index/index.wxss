/**index.wxss**/
.index {
  position: relative;
}

.index .slide-image {
  width: 100%;
}

.index .search {
  position: absolute;
  top: 420rpx;
  left: 50rpx;
  z-index: 999;
}

.index .van-search {
  width: 650rpx;
  background: transparent !important;
}

.index .van-search__content {
  border-radius: 38rpx !important;
  box-shadow: 0px 0px 5px #ccc;
}

.index input {
  font-size: 24rpx;
}

.index .van-grid {
  margin-top: 50rpx !important;
  border-bottom: 24rpx solid #f6f6f6;
}

.index .txt {
  text-align: center;
}

.index .indexCellTitle {
  font-weight: 700;
}

.index .indexCellValue {
  color: #969799;
  font-size: 32rpx;
}

.index .text {
  text-align: center;
  height: 68rpx;
  line-height: 69rpx;
  font-size: 24rpx;
  color: #969799;
  border-bottom: 24rpx solid #f6f6f6;
}

.index .indexList {
  border-bottom: 24rpx solid #f6f6f6;
  position: relative;
  overflow: hidden;
}

.index .indexList .rotate {
  position: absolute;
  top: 40rpx;
  left: -60rpx !important;
  text-align: center;
  transform: rotate(-45deg);
  width: 240rpx;
  height: 50rpx;
  line-height: 50rpx;
  background-color: #2f99af;
  color: #fff;
  font-size: 28rpx;
  letter-spacing: 8rpx;
}

.index .box {
  padding: 0 20rpx;
  display: flex;
  justify-content: space-between;
}

.index .box .left {
  width: 500rpx;
  font-size: 32rpx;
  line-height: 70rpx;
}

.index .box .left .van-tag {
  margin-right: 10rpx;
}

.index .box .right {
  line-height: 160rpx;
  color: red;
}